{
  "name": "duacopilot-aws-backend",
  "version": "1.0.0",
  "description": "AWS deployment configuration for DuaCopilot backend",
  "scripts": {
    "install-serverless": "npm install -g serverless",
    "install-cdk": "npm install -g aws-cdk",
    "setup-aws": "aws configure",
    "migrate-lambda": "serverless deploy --stage prod",
    "migrate-cdk": "cdk bootstrap && cdk deploy",
    "build": "tsc && npm run build:lambda",
    "build:lambda": "cd lambda && tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/client-lambda": "^3.400.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-sns": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "@sendgrid/mail": "^8.0.0",
    "aws-sdk": "^2.1400.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.3.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "serverless": "^3.35.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.15.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3"
  }
}
