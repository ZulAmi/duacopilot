{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run DuaCopilot - Windows Dev",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--target",
				"lib/main_dev.dart",
				"-d",
				"windows"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run DuaCopilot - Web Dev",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--target",
				"lib/main_dev.dart",
				"-d",
				"chrome",
				"--web-port",
				"8080"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Flutter: Run Integration Tests",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test",
				"integration_test/"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Flutter: Run Integration Tests (Web)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test",
				"integration_test/",
				"-d",
				"chrome"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Flutter: Run All Tests",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test",
				"--coverage"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}